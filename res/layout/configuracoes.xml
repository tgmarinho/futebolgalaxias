<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Configurações de Partida" />
    
    <View      
        android:id="@+id/Divisor1"
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:background="#A8A8A8" />
    
	<LinearLayout
	    android:layout_marginTop="10dip"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewGols"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gols por Partida" />
        
        <TextView
            android:id="@+id/textViewProgressGols"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade selecionada: " />

        <SeekBar
            android:id="@+id/seekBarGols"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:max="20" />
        
        <TextView
            android:id="@+id/textViewActionGols"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewProgress"
            android:text="Deslize para selecionar a quantidade de gol(s)"
            android:textSize="10dp" />

	</LinearLayout>

	<LinearLayout
	    android:layout_marginTop="10dip"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >
        
		<TextView
		    android:id="@+id/textViewTempo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Período da Partida" />
	
		<TextView
	            android:id="@+id/textViewProgressTempo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Tempo selecionado: " />
	        
		<SeekBar
		    android:id="@+id/seekBarTempo"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:max="120"  />
		
		<TextView
            android:id="@+id/textViewActionTempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textViewProgress"
            android:text="Deslize para selecionar a quantidade em minuto(s)"
            android:textSize="10dp" />
		
	</LinearLayout>

</LinearLayout>
