<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FF494C"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FF494C"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/futeGalaxias"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Programmers Evolution Soccer"
            android:textSize="13sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnConfiguracoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@drawable/img_pes"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="fill_vertical"
        android:layout_weight="0.09"
        android:background="#190F11"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/placarTime1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.40"
            android:gravity="center"
            android:textColor="#ef0000"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/versus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            android:gravity="center"
            android:text="x"
            android:textColor="#ef0000"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/placarTime2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.39"
            android:gravity="center"
            android:text="1"
            android:textColor="#ef0000"
            android:textSize="70sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#115588"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:format="@string/chronometer_initial_format"
            android:gravity="center"
            android:paddingBottom="30dip"
            android:paddingTop="30dip" />

        <Button
            android:id="@+id/btnJogo"
            android:layout_width="142dp"
            android:layout_height="52dp"
            android:background="@drawable/btn_black"
            android:gravity="center"
            android:text="Começar"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_weight="0.20"
        android:background="#115588"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnTirarGolTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:text="-" />

        <Button
            android:id="@+id/btnFazerGolTime1"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="0.39"
            android:background="@drawable/btn_blue"
            android:text="GOL" />

        <Button
            android:id="@+id/btnFazerGolTime2"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="0.39"
            android:background="@drawable/btn_red"
            android:text="GOL" />

        <Button
            android:id="@+id/btnTirarGolTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Powered³ @Software"
            android:textColor="#ffffff"
            android:textSize="14dp" />

    </LinearLayout>

</LinearLayout>